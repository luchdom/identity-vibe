{
  "ScopeConfiguration": {
    "UserScopes": {
      "DefaultScopes": [
        "openid",
        "profile",
        "email"
      ],
      "RoleScopes": {
        "Admin": [
          "orders.read",
          "orders.write",
          "orders.manage",
          "profile.read",
          "profile.write",
          "admin.manage"
        ],
        "User": [
          "orders.read",
          "orders.write",
          "profile.read",
          "profile.write"
        ],
        "Support": [
          "orders.read",
          "profile.read"
        ]
      }
    },
    "ServiceClients": {
      "Clients": {
        "web-client": {
          "ClientId": "web-client",
          "ClientSecret": "secret",
          "DisplayName": "Web Client",
          "Description": "Web application client for user authentication",
          "AllowedScopes": [
            "openid",
            "profile",
            "email"
          ],
          "GrantTypes": [
            "password",
            "refresh_token"
          ],
          "RedirectUris": [
            "https://oauth.pstmn.io/v1/callback"
          ]
        },
        "Orders": {
          "ClientId": "Orders",
          "ClientSecret": "orders-secret",
          "DisplayName": "Orders Service",
          "Description": "Orders API service for order management operations",
          "AllowedScopes": [
            "orders.read",
            "orders.write",
            "orders.manage"
          ],
          "GrantTypes": [
            "client_credentials"
          ],
          "RedirectUris": []
        },
        "mobile-app": {
          "ClientId": "mobile-app",
          "ClientSecret": "mobile-secret",
          "DisplayName": "Mobile Application",
          "Description": "Mobile application client for user authentication",
          "AllowedScopes": [
            "openid",
            "profile",
            "email",
            "offline_access"
          ],
          "GrantTypes": [
            "password",
            "refresh_token"
          ],
          "RedirectUris": [
            "com.dummy.mobile://callback"
          ]
        },
        "gateway-bff": {
          "ClientId": "gateway-bff",
          "ClientSecret": "gateway-secret",
          "DisplayName": "Gateway BFF",
          "Description": "Backend for Frontend gateway service",
          "AllowedScopes": [
            "openid",
            "profile",
            "email",
            "offline_access",
            "orders.read",
            "orders.write",
            "orders.manage",
            "profile.read",
            "profile.write"
          ],
          "GrantTypes": [
            "password",
            "refresh_token",
            "client_credentials"
          ],
          "RedirectUris": [
            "http://localhost:5002/signin-oidc",
            "https://localhost:5004/signin-oidc"
          ]
        }
      }
    }
  }
}
