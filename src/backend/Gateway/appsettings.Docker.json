{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Authentication": {
    "Authority": "http://authserver:8080/",
    "Audience": "gateway-bff"
  },
  "Services": {
    "AuthServer": {
      "BaseUrl": "http://authserver:8080"
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-server": {
            "Address": "http://authserver:8080"
          }
        }
      },
      "orders-cluster": {
        "Destinations": {
          "orders": {
            "Address": "http://orders:8080"
          }
        }
      }
    }
  }
}