{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "System.Net.Http.HttpClient": "Warning",
        "Yarp": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/gateway-.json",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithEnvironmentName", "WithMachineName", "WithProcessId", "WithThreadId", "WithCorrelationId"]
  },
  "Logging": {
    "LogDirectory": "logs"
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Authority": "${EXTERNAL_AUTH_URL}",
    "Audience": "${EXTERNAL_AUTH_URL}"
  },
  "Services": {
    "AuthServer": {
      "BaseUrl": "${EXTERNAL_AUTH_URL}"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:*", "https://localhost:*"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "account-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/account/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/account/{**catch-all}"
          }
        ]
      },
      "scope-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/scope/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/scope/{**catch-all}"
          }
        ]
      },
      "connect-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/connect/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/connect/{**catch-all}"
          }
        ]
      },
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/orders/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/orders/{**catch-all}"
          },
          {
            "RequestHeader": "Authorization",
            "Set": "{OriginalValue}"
          }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-server": {
            "Address": "${INTERNAL_AUTH_URL}"
          }
        }
      },
      "orders-cluster": {
        "Destinations": {
          "orders": {
            "Address": "${INTERNAL_ORDERS_URL}"
          }
        }
      }
    }
  }
}
