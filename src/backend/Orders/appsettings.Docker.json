{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Authority": "http://authserver:8080/",
    "Audience": "gateway-bff"
  },
  "Auth": {
    "AuthenticationProviders": {
      "UserIdentity": {
        "Authority": "http://authserver:8080",
        "AuthorizationPolicies": {
          "UserIdentity": {
            "Scopes": [ "orders.read", "orders.write" ]
          }
        }
      },
      "ServiceIdentity": {
        "Authority": "http://authserver:8080",
        "AuthorizationPolicies": {
          "ServiceIdentityRead": {
            "Scopes": [ "orders.read" ]
          },
          "ServiceIdentityCreate": {
            "Scopes": [ "orders.write" ]
          },
          "ServiceIdentityUpdate": {
            "Scopes": [ "orders.write" ]
          },
          "ServiceIdentityDelete": {
            "Scopes": [ "orders.manage" ]
          }
        }
      }
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "https://*.desiredurl.com",
      "http://localhost:5000",
      "http://localhost:5001",
      "http://localhost:5002",
      "http://localhost:5003",
      "https://localhost:5000",
      "https://localhost:5001",
      "https://localhost:5002",
      "https://localhost:5003"
    ]
  }
} 